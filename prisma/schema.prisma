// 4. Koszyk
model Cart {
  id     Int  @id @default(autoincrement())
  userId String  @unique // 1:1 – jeden użytkownik ma dokładnie jeden koszyk
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items CartItem[]
}

// 5. Element koszyka
model CartItem {
  id       Int @id @default(autoincrement())
  quantity Int @default(1)

  cartId    Int
  productId Int

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ten sam produkt tylko raz w danym koszyku
  @@unique([cartId, productId])
  @@index([cartId])
  @@index([productId])
}

// 6. Zamówienia (historia)
model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique // unikalny numer zamówienia
  status      OrderStatus @default(PENDING)
  totalAmount Decimal     @db.Decimal(10, 2) // łączna kwota

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items OrderItem[]
  // orderNumber jest @unique, więc ma indeks

  @@index([userId])
}

// 7. Pozycje w zamówieniu
model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2) // cena w momencie zakupu

  orderId   Int
  productId Int

  // kopie danych produktu – historia musi pozostać poprawna
  productName String
  productCode String

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}
