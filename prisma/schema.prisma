generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// For authorization with auth.ts 
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  cart          Cart?
  orders        Order[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// --- ENUMY -------------------------------------------------------------------

enum OrderStatus {
  PENDING // oczekujące
  PROCESSING // w trakcie realizacji
  SHIPPED // wysłane
  DELIVERED // dostarczone
  CANCELLED // anulowane
}

// --- MODELE ------------------------------------------------------------------

// 1. Kategorie produktów
model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique // np. "procesor", "karta graficzna" itd.
  products Product[] // relacja 1:N z produktami

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Produkty
model Product {
  id          Int      @id @default(autoincrement())
  code        String   @unique // np. "C000000091"
  name        String
  description String? // opis opcjonalny
  price       Decimal  @db.Decimal(10, 2) // 2 miejsca po przecinku
  amount      Int // stan magazynowy
  imagePath   String? // ścieżka do obrazka (np. "public/images/...")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relacja z kategorią (w JSON pole "type")
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  // relacje pomocnicze
  cartItems  CartItem[]
  orderItems OrderItem[]
  // code jest @unique, więc ma już indeks

  @@index([categoryId])
}

